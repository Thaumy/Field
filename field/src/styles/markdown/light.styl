.v-theme--fieldLight .markdown-zone
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  line-height 1.5
  font-size 1rem
  word-wrap break-word

  &::after
  &::before
    display table
    content ""

  &::after
    clear both

  details
    display block

  summary
    display list-item

  a
    text-decoration none
    font-weight 500
    margin-left 4px
    margin-right 4px
    background-color initial

    &:active
    &:hover
      outline-width 0

    &:hover
      text-decoration underline

  strong
    font-weight bolder

  img
    border-style none
    border-radius 4px
    box-shadow 0 0 4px 0.4px rgba(0 0 0 0.3)

  input
    font inherit
    margin 0

  input
    overflow visible

  [type=checkbox]
    box-sizing border-box
    padding 0

  *
    box-sizing border-box

  input
    font-family inherit
    font-size inherit
    line-height inherit

  strong
    font-weight 600

  hr
    padding 0
    background-color #e1e4e8
    border-bottom-color #eee
    height 0
    margin 15px 0
    overflow hidden
    background 0 0
    border 0
    border-bottom 1px solid #dfe2e5

    &:after
    &:before
      display table
      content ""

    &:after
      clear both

  details
    summary
      cursor pointer

  p
    margin-top 0
    margin-bottom 10px

  blockquote
    margin 0

  dd
    margin-left 0

  input::-webkit-inner-spin-button
  input::-webkit-outer-spin-button
    margin 0
    -webkit-appearance none
    appearance none

  :checked + .radio-label
    position relative
    z-index 1
    border-color #0366d6

  a
    &:not([href])
      color inherit
      text-decoration none

  blockquote
  details
  dl
  ol
  p
  pre
  table
  ul
    margin-top 0
    margin-bottom 16px

  blockquote
    padding 0.2rem 0.5rem
    color #6a737d
    border-left .25em solid #0078d7
    background rgb(236 236 236)

    > :first-child
      margin-top 0

    > :last-child
      margin-bottom 0

  h1
  h2
  h3
  h4
  h5
  h6
    margin-top 2rem
    margin-bottom 1rem
    font-weight 600
    line-height 1.2

  h1
    font-size 1.8em

  h1
  h2
    font-weight 600
    padding-bottom .3em
    border-bottom 1px solid #dcdcdc

  h2
    font-size 1.3em

  h3
  h4
  h5
  h6
    font-weight 600

  h3
    font-size 1.25em

  h4
    font-size 1em

  h5
    font-size .875em

  h6
    font-size .85em
    color #6a737d

  ol
    padding-left 1.7rem

    li::marker
      color rgb(120 120 120)

  ul
    padding-left 1.2rem

    li::marker
      color rgb(160 160 160)

  ul
  ol

    li
      word-break break-all

      > p
        margin-top 16px

    li + li
      margin-top .25em

    ol
      list-style-type lower-roman

    ol
    ul
      margin-top 0
      margin-bottom 0

      ol
        list-style-type lower-alpha

  dl
    padding 0

    dt
      padding 0
      margin-top 16px
      font-size 1em
      font-style italic
      font-weight 600

    dd
      padding 0 16px
      margin-bottom 16px

  table
    border-spacing 0
    border-collapse collapse
    border-radius 4px

    width 100%
    margin-top 6px
    margin-bottom 6px
    overflow auto
    /*background-color rgb(240 240 240)*/
    box-shadow 0 2px 1px -2px rgba(0 0 0 20%), 0 2px 2px 0 rgba(0 0 0 14%), 0 1px 5px 0 rgba(0 0 0 12%)
    //box-shadow 0 0 2px 0 rgba(0 0 0 0.4)

    th
      font-weight 600

    td
      font-size 14px
      line-height 20px
      border-top 1px solid rgb(220 220 220)

    td
    th
      text-align center
      padding 6px

    tr
      td
        &:not(:last-child):not(:first-child)
          border-left 1px solid rgb(220 220 220)
          border-right 1px solid rgb(220 220 220)

    thead

      tr
        background rgb(240 240 240)

        &:first-child
          th
            &:first-child
              border-top-left-radius 4px

            &:last-child
              border-top-right-radius 4px

    tbody

      tr
        &:nth-child(odd)
          background rgb(234 234 234)

        &:nth-child(even)
          background rgb(240 240 240)

        &:last-child
          td
            &:first-child
              border-bottom-left-radius 4px

            &:last-child
              border-bottom-right-radius 4px

  img
    max-width 100%

    &[align=right]
      padding-left 20px

    &[align=left]
      padding-right 20px

  kbd
    display inline-block
    margin-left 2px
    margin-right 2px
    padding 3px 5px
    font-size 0.8rem
    line-height 10px
    color #444d56
    vertical-align middle
    background-color #fafbfc
    border 1px solid #d1d5da
    border-radius 3px
    box-shadow inset 0 -1px 0 #d1d5da

  code
    padding 0.1rem 0.4rem 0.1rem 0.4rem
    background-color rgb(234 234 234)
    margin-left 2px
    margin-right 2px
    font-size 0.8rem
    border-radius 4px

  pre
    word-wrap normal
    background-color rgb(240 240 240)
    margin-top 6px
    margin-bottom 6px
    font-size 0.9rem
    text-align left /*原来是right*/
    white-space pre-wrap
    border-radius 4px
    box-shadow 0 2px 1px -2px rgba(0 0 0 20%), 0 2px 2px 0 rgba(0 0 0 14%), 0 1px 5px 0 rgba(0 0 0 12%)
    padding 6px 10px 10px 10px
    overflow auto

    code
      background-color inherit
      padding 0
      margin 0
      overflow visible
      line-height inherit
      word-wrap normal
      border 0
      font-size 1em
      word-break normal
      white-space pre
      text-align left
      letter-spacing 0
