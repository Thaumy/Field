standard-transition-time = 0.2s
standard-transition = all standard-transition-time ease

@css {
  .markdown-zone {
    color: rgb(var(--v-theme-on-surface));
    font-family: 'DejaVu Sans', Emoji, sans-serif;
  }
  .markdown-zone code,
  .markdown-zone table th,
  .markdown-zone table td {
    color: rgb(var(--v-theme-on-surface));
  }
  .markdown-zone pre,
  .markdown-zone kbd,
  .markdown-zone code {
    font-family: 'JetBrains Mono', monospace;
  }
  .markdown-zone a {
    color: rgb(var(--v-theme-primary));
  }
}

.markdown-zone
  h1
  h2
    transition border standard-transition-time

  pre
    transition standard-transition

    code
      transition color standard-transition-time

  a
  kbd
    transition standard-transition

  table
    thead
    tbody
      tr
        transition standard-transition

        th
        td
          transition standard-transition

  blockquote
    transition standard-transition

  code
    transition standard-transition
