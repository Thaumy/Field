.v-theme--fieldDark .markdown-zone

  &::after
  &::before
    display table
    content ""

  &::after
    clear both

  details
    display block

  summary
    display list-item

  strong
    font-weight bolder

  img
    border-style none
    border-radius 4px
    box-shadow 0 0 4px 0.4px rgba(0 0 0 0.3)

  input
    font inherit
    margin 0

  input
    overflow visible

  [type=checkbox]
    box-sizing border-box
    padding 0

  *
    box-sizing border-box

  input
    font-family inherit
    font-size inherit
    line-height inherit

  strong
    font-weight 600

  hr
    padding 0
    background-color #e1e4e8
    border-bottom-color #eee
    height 0
    margin 15px 0
    overflow hidden
    background 0 0
    border 0
    border-bottom 1px solid rgb(50 50 50)

    &:after
    &:before
      display table
      content ""

    &:after
      clear both

  :checked + .radio-label
    position relative
    z-index 1
    border-color #0366d6

  blockquote
    padding 0.2rem 0.5rem
    color #6a737d
    border-left .25em solid #0078d7
    background rgba(40 40 40 1)

    > :first-child
      margin-top 0

    > :last-child
      margin-bottom 0

  h1
  h2
    font-weight 600
    padding-bottom .3em
    border-bottom 1px solid rgb(50 50 50)

  h6
    font-size .85em
    color #6a737d

  ol
    padding-left 1.7rem

    li::marker
      color rgb(140 140 140)

  ul
    padding-left 1.2rem

    li::marker
      color rgb(120 120 120)

  table
    border-spacing 0
    border-collapse collapse
    border-radius 4px

    width 100%
    margin-top 6px
    margin-bottom 6px
    overflow auto
    /*background-color rgb(240 240 240)*/
    box-shadow 0 2px 1px -2px rgba(0 0 0 20%), 0 2px 2px 0 rgba(0 0 0 14%), 0 1px 5px 0 rgba(0 0 0 12%)
    //box-shadow 0 0 2px 0 rgba(0 0 0 0.4)

    th
      font-weight 600

    td
      font-size 14px
      line-height 20px
      border-top 1px solid rgb(16 16 16)

    td
    th
      text-align center
      padding 6px

    tr
      td
        &:not(:last-child):not(:first-child)
          border-left 1px solid rgb(16 16 16)
          border-right 1px solid rgb(16 16 16)

    thead

      tr
        background rgb(24 24 24)

        &:first-child
          th
            &:first-child
              border-top-left-radius 4px

            &:last-child
              border-top-right-radius 4px

    tbody

      tr
        &:nth-child(odd)
          background rgb(20 20 20)

        &:nth-child(even)
          background rgb(24 24 24)

        &:last-child
          td
            &:first-child
              border-bottom-left-radius 4px

            &:last-child
              border-bottom-right-radius 4px

  kbd
    display inline-block
    margin-left 2px
    margin-right 2px
    padding 3px 5px
    font-size 0.8rem
    line-height 10px
    color #f0f0f0
    vertical-align middle
    background-color rgb(70 70 70)
    border 1px solid #525252
    border-radius 3px
    box-shadow inset 0 -1px 0 #000000

  code
    padding 0.1rem 0.4rem 0.1rem 0.4rem
    background-color rgb(50 50 50)
    margin-left 2px
    margin-right 2px
    font-size 0.8rem
    border-radius 4px

  pre
    word-wrap normal
    background-color rgb(16 16 16)
    margin-top 6px
    margin-bottom 6px
    font-size 0.9rem
    text-align left /*原来是right*/
    white-space pre-wrap
    border-radius 4px
    box-shadow 0 2px 1px -2px rgba(0 0 0 20%), 0 2px 2px 0 rgba(0 0 0 14%), 0 1px 5px 0 rgba(0 0 0 12%)
    padding 6px 10px 10px 10px
    overflow auto

    code
      background-color inherit
      padding 0
      margin 0
      overflow visible
      line-height inherit
      word-wrap normal
      border 0
      font-size 1em
      word-break normal
      white-space pre
      text-align left
      letter-spacing 0
