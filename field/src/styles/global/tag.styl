input
  outline none

  &:focus
    outline none

button
  border-radius 2px
  border 0
  background-color blue
  transition-duration 0.4s

  &:hover
    background-color blue

  &:focus
    outline none
    background-color blue

p
  display block
  margin-block-start 0.8em
  margin-block-end 0.4em
  margin-inline-start 0
  margin-inline-end 0

@css {
  html {
    font-family: "DejaVu Sans", Emoji, sans-serif;
  }
}